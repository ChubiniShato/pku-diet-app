# PKU Diet App - Environment Configuration
# Copy this file to .env and update values as needed

# ================================
# DATABASE CONFIGURATION
# ================================
DB_NAME=pku
DB_USER=pku
DB_PASSWORD=pku
DB_HOST=localhost
DB_PORT=5432
DB_URL=jdbc:postgresql://localhost:5432/pku?characterEncoding=UTF-8&useUnicode=true

# ================================
# APPLICATION CONFIGURATION
# ================================
SPRING_PROFILES_ACTIVE=development
SERVER_PORT=8080
LOG_LEVEL=com.chubini.pku=DEBUG

# ================================
# EXTERNAL SERVICES (PRODUCTION)
# ================================

# Firebase Cloud Messaging (Push Notifications)
FCM_ENABLED=true
FCM_PROJECT_ID=your-fcm-project-id
FCM_PRIVATE_KEY=your-fcm-private-key
FCM_CLIENT_EMAIL=your-fcm-client-email

# SendGrid (Email Notifications)
SENDGRID_ENABLED=true
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=PKU Diet App

# Twilio (SMS Notifications)
TWILIO_ENABLED=true
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Open Food Facts API
OFF_API_ENABLED=true
OFF_API_BASE_URL=https://world.openfoodfacts.org/api/v0
OFF_API_USER_AGENT=PKU-Diet-App/1.0

# AWS S3 (File Storage)
S3_ENABLED=true
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key
S3_REGION=us-east-1
S3_BUCKET=your-pku-bucket
S3_ENDPOINT=https://s3.us-east-1.amazonaws.com

# ================================
# APPLICATION DEFAULTS
# ================================
REGION_DEFAULT=US
LOCALE_DEFAULT=en_US
WEEK_START_DEFAULT=MONDAY

# ================================
# FEATURE FLAGS
# ================================
EMERGENCY_MODE_ENABLED=false
PANTRY_USAGE_ENABLED=true
NOTIFICATIONS_ENABLED=true
SHARING_ENABLED=true
LABEL_SCAN_ENABLED=true

# ================================
# SECURITY & COMPLIANCE
# ================================
JWT_SECRET=your-256-bit-secret-key-here-must-be-at-least-256-bits-long-for-security
JWT_EXPIRATION=86400000
SESSION_TIMEOUT=3600000
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:80

# ================================
# RATE LIMITING
# ================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# ================================
# FILE UPLOAD CONFIGURATION
# ================================
UPLOAD_MAX_FILE_SIZE=10MB
UPLOAD_MAX_REQUEST_SIZE=10MB
UPLOAD_ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.csv,.txt
UPLOAD_ALLOWED_MIME_TYPES=image/jpeg,image/png,text/csv,text/plain

# ================================
# MONITORING & LOGGING
# ================================
METRICS_ENABLED=true
TRACING_ENABLED=false
LOG_SENSITIVE_DATA=false

# ================================
# DEVELOPMENT/TESTING OVERRIDES
# ================================
# Set these to false for local development without external services
FCM_ENABLED=false
SENDGRID_ENABLED=false
TWILIO_ENABLED=false
OFF_API_ENABLED=false
S3_ENABLED=false
